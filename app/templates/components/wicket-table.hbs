<h3>{{team}} Wicket-table</h3>
<table border="1">
    <thead>
        <tr>
            <th>Players</th>
            {{#each players as |player|}}
            <th>
                {{player}} 
                {{#if (eq current_batting opponent)}}
                    {{#if (eq player bowler)}}<span class="red-dot"></span>{{/if}}
                {{/if}}
            </th>
            {{/each}}
        </tr>
    </thead>
    <tbody>
        <tr>
            <td>Balls</td>
            {{#each balls as |ball|}} <td>{{ball}}</td> {{/each}}
        </tr>
        <tr>
            <td>Total Wickets</td>
            {{#each wickets as |wicket|}} <td>{{if wicket wicket "-"}}</td> {{/each}}
        </tr>
    </tbody>
</table>