            <button disabled={{eq-two current_batting "team2" "none"}} {{action "updateScore" 4}}>4Ô∏è‚É£</button>
            <button disabled={{eq-two current_batting "team2" "none"}} {{action "updateScore" 6}}>üèè6Ô∏è‚É£</button>
        </div>
        <br>
        <button class="out-button" disabled={{eq-two current_batting "team2" "none"}} {{action "updateScore" "out"}}>üö´ Out</button>
        <br>
        <br>
        {{#if (not-eq bowler1 "")}}
        <div>{{striker1}}</div>
        <div>{{nonStriker1}}</div>
        <div>Bowler: {{bowler1}}</div>
        {{/if}}
    </div>
    <div id="team2stats" class="team-stats" style="background-color: {{team2StatsBackground}}">
