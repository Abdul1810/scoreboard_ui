<br>

<h3>{{team1}} Score-table</h3>
<table border="1" style="width: 80%; margin: auto; border-collapse: collapse;">
    <thead>
        <tr>
            <th>Players</th>
            {{#each team1Players as |player index|}}
            <th>{{player}} {{#if (eq current_batting "team1")}}{{#if (eq-inc index active_batsman_index)}}<span
                    class="green-dot"></span>{{/if}}{{#if (eq-inc index passive_batsman_index)}}<span
                    class="grey-dot"></span>{{/if}}{{/if}}</th>
            {{/each}}
        </tr>
    </thead>
    <tbody>
        <tr>
            <td>Runs</td>
            {{#each team1Runs as |runs|}}
            <td>{{runs}}</td>
            {{/each}}
        </tr>
        <tr>
            <td>Balls</td>
            {{#each team1Balls as |balls|}}
            <td>{{balls}}</td>
            {{/each}}
        </tr>
        <tr>
            <td>Wicket Taker</td>
            {{#each team1WicketsMap as |wicket|}}
            <td>{{if wicket wicket "-"}}</td>
            {{/each}}
        </tr>
    </tbody>
</table>

