{{title "All Matches"}}
{{match-styles}}
<div class="container">
  <h1>Scoreboard - Matches</h1>
  <div class="create-links">
    {{#link-to "match.create"}}+ Create New Match{{/link-to}}
    {{#link-to "teams.create"}}+ Create New Team{{/link-to}}
    {{#link-to "tournament.create"}}+ Create New Tournament{{/link-to}}
    {{#link-to "embeds"}}All Embeds{{/link-to}}
  </div>
  <p style="color: {{resultColor}};">{{resultMessage}}</p>

  <div id="ongoing-matches" class="matches-list">
    <h3>On-going Matches</h3>
    {{#if ongoingMatches.length}}
    {{#each ongoingMatches as |match|}}
    <div class="match-item">
      <h5>{{match.team1}} vs {{match.team2}}</h5>
      <div class="match-actions">
        {{#link-to "match.edit" match.id}}Edit{{/link-to}}
        <button {{action "deleteMatch" match.id}}>Delete</button>
      </div>
    </div>
    {{/each}}
    {{else}}
    <p>No matches found</p>
    {{/if}}
  </div>

  <div id="completed-matches" class="matches-list">
    <h3>Completed Matches</h3>
    {{#if completedMatches.length}}
    {{#each completedMatches as |match|}}
    <div class="match-item">
      <h5>{{match.team1}} vs {{match.team2}} <span style="color: #28a745;">({{match.winner}})</span></h5>
      <div class="match-actions">
        {{#if match.highlights_path}}
        {{#link-to "match.highlights" match.id class="highlight-btn"}}â–¶Highlights{{/link-to}}
        {{/if}}
        {{#link-to "match.edit" match.id}}View{{/link-to}}
        <button {{action "deleteMatch" match.id}}>Delete</button>
      </div>
    </div>
    {{/each}}
    {{else}}
    <p>No matches found</p>
    {{/if}}
  </div>
  <button {{action "logout" }} class="link-btn">Logout, {{auth.username}}</button>
</div>