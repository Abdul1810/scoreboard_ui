<div style="background-color: {{backgroundColor}}">
  <label>{{team}}</label>
  <h3 style="display: flex; justify-content: center; margin: 0">{{score}}</h3>

  <div class="score-buttons">
    <button {{action 'updateScore' 1}} disabled={{buttonsDisabled}}>1️⃣</button>
    <button {{action 'updateScore' 2}} disabled={{buttonsDisabled}}>✌️</button>
    <button {{action 'updateScore' 4}} disabled={{buttonsDisabled}}>4️⃣</button>
    <button {{action 'updateScore' 6}} disabled={{buttonsDisabled}}>🏏6️⃣</button>
  </div>
  <br>
  <button class="out-button" {{action 'updateScore' 'out'}} disabled={{outDisabled}}>🚫 Out</button>
  <br>
  <br>
  <div>{{striker}}</div>
  <div>{{nonstriker}}</div>
  <div>{{bowler}}</div>
</div>
